--variables
--mode= 0-punchwhite 1-youngyellow 2-oldpurple

function _init()
	p={
		sp=1,
		x=59,
		y=59,
		w=8,
		h=8,
		flp=false,
		mode=0,
		mode_rls=false,
		punch_time=0,
		punch_rls=false,
		punch_del=.2,
		punch_cool=.3,
		dx=0,
		dy=0,
		max_dx=2,
		max_dy=3,
		acc=1,
		boost=4,
		anim=0,
		running=false,
		jumping=false,
		falling=false,
		landed=false,
		punching=false,
	}
	
	gravity=0.3
	friction=0.85
	
	cam_x=0
	
	--map limits
	map_start=0
	map_end=1024
end

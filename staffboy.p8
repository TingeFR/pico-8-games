--update and draw
function _update()
	p_update()
	p_animate()
	
	cam_x=p.x-64+(p.w/2)
	if cam_x<map_start then
		cam_x=map_start
	end
	if cam_x>map_end-128 then
		cam_x=map_end-128
	end
	camera(cam_x,0)
end


function _draw()
	cls()
	map(0,0)
	spr(p.sp,p.x,p.y,1,1,p.flp)
	print(p.punching)
end

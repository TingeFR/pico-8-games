--player

function p_update()
	--physics
	p.dy+=gravity
	p.dx*=friction
	
	--controls
	if btn(â¬…ï¸) then
		p.dx-=p.acc
		p.running=true
		p.flp=true
	end
	if btn(âž¡ï¸) then
		p.dx+=p.acc
		p.running=true
		p.flp=false
	end
	if btnp(ðŸ…¾ï¸) and not p.mode_rls then
		p.mode_rls=true
		p.mode+=1
		if p.mode>2 then
			p.mode=0		
		end
	end
	if not btn(ðŸ…¾ï¸) then
		p.mode_rls = false
	end
	if btnp(âŽ) and not p.punch_rls then
		p.punch_rls=true
		p.punch_time=time()
		p.punching=true
	end
	if time()-p.punch_time>p.punch_del then
		p.punching=false
	end
	if not btn(âŽ)
	and not p.punching
	and time()-p.punch_time>p.punch_del+p.punch_cool then
		p.punch_rls=false
	end
	
	--jump
	if btn(â¬†ï¸)
	and p.landed then
		p.dy-=p.boost
		p.landed=false
		sfx(0)
	end
	
	p.punch_del=.2

	-- check col â¬†ï¸ and â¬‡ï¸
	if p.dy>0 then
		p.falling=true
		p.landed=false
		p.jumping=false
		
		p.dy=limit_speed(p.dy,p.max_dy)
		
		if collide_map(p,"down",0) then
			if p.dx<-1 or p.dx>1 then
				p.punch_del=.5
			end
			p.landed=true
			p.falling=false
			p.dy=0
			p.y-=((p.y+p.h+1)%8)-1
		end
	elseif p.dy<0 then
		p.jumping=true
		if collide_map(p,"up",1) then
			p.dy=0
		end
	end
	
	-- check col â¬…ï¸ and âž¡ï¸
	if p.dx<0 then
		
		p.dx=limit_speed(p.dx,p.max_dx)
		
		if collide_map(p,"left",1) then
			p.dx=0
		end
	elseif p.dx>0 then
	
		p.dx=limit_speed(p.dx,p.max_dx)
	
		if collide_map(p,"right",1) then
			p.dx=0
		end
	end
	
	--slow'n'stop
	if p.running and abs(p.dx)<.8 then
		p.dx=0
		p.running=false
		p.punch_rls=false
	end
	
	p.x+=p.dx
	p.y+=p.dy
	
	--limit player to map
	if p.x<map_start then
		p.x=map_start
	end
	if p.x>map_end-p.w then
		p.x=map_end-p.w
	end
	
end

function p_animate()
	hit_sfx=-1
	if p.jumping then
		if p.punching then
			p.sp=10
			hit_sfx=1
		else
			p.sp=7
		end
	elseif p.falling then
		if p.punching then
			p.sp=10
			hit_sfx=1
		else
			p.sp=8
		end
	elseif p.running then
		if time()-p.anim>.1 then
			p.anim=time()
			p.sp+=1
			if p.sp>6 then
				p.sp=3				
			end
		end
		if p.punching then
			p.sp=9
			hit_sfx=2
		end
	--player idle
	else
		if time()-p.anim>.3 then
			p.anim=time()
			p.sp+=1
			if p.sp>2 then
				p.sp=1				
			end
		end
		if p.punching then
			p.sp=10
			hit_sfx=1
		end
	end
	--punch sound
	if time()-p.punch_time>.1
	and time()-p.punch_time<.16 then
		sfx(hit_sfx)
	end
	--modes
	pal()
	if p.mode==0 then
		pal(12,7)
	elseif p.mode==1 then
		pal(12,9)
	elseif p.mode==2 then
		pal(12,14)
	end
end

function limit_speed(num,m)
	return mid(-m,num,m)
end
